<button
  id="font-size-toggle"
  type="button"
  class="text-gray-700 dark:text-gray-200 hover:text-amber-600 dark:hover:text-amber-400 focus:outline-none transition-colors p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
  aria-label="Change font size"
  title="Change font size"
>
  <span class="text-sm font-bold">A</span><span class="text-lg font-bold"
    >A</span
  >
</button>

<script>
  const STORAGE_KEY = "font-size-preference";
  const SIZES = ["100%", "112.5%", "125%"]; // Normal, Large, Extra Large

  function getStoredFontSize() {
    return localStorage.getItem(STORAGE_KEY) || "100%";
  }

  function setFontSize(size: string) {
    document.documentElement.style.fontSize = size;
    localStorage.setItem(STORAGE_KEY, size);
  }

  function getNextSize(currentSize: string) {
    const currentIndex = SIZES.indexOf(currentSize);
    const nextIndex = (currentIndex + 1) % SIZES.length;
    return SIZES[nextIndex];
  }

  const toggle = document.getElementById("font-size-toggle");

  if (toggle) {
    toggle.addEventListener("click", () => {
      const currentSize = document.documentElement.style.fontSize || "100%";
      const nextSize = getNextSize(currentSize);
      setFontSize(nextSize);
    });
  }
</script>
