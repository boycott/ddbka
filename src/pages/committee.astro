---
import Layout from "../layouts/Main.astro";
import { Image } from "astro:assets";
import placeholderAvatar from "../assets/placeholder-avatar.png";

const committeeMembers = [
  {
    name: "Peter Crow",
    role: "Chair",
    responsibilities: [
      "Can participate in the annual delegates' conference each January",
    ],
  },
  {
    name: "Paula Gardner",
    role: "Vice Chair",
    responsibilities: [],
  },
  {
    name: "Maggie Harrowell",
    role: "Secretary and Membership Secretary",
    responsibilities: [
      "Newsletters",
      "Fielding enquiries",
      "Memberships",
      "Runs monthly meetings",
      "Record keeping",
    ],
  },
  {
    name: "Sue Court",
    role: "Show Secretary and Apiary Manager",
    responsibilities: [
      "Manages all aspects of the annual Honey Show",
      "Ensures apiary hives are healthy, maintains records, organisers apiary help and prepares colonies for exams",
    ],
  },
  {
    name: "Julie Scott",
    role: "Treasurer",
    responsibilities: [
      "Collects/processes membership payments",
      "Collects payments at meetings",
      "Manages Club Accounts",
    ],
  },
  {
    name: "Jackie Thomas",
    role: "Training Secretary",
    responsibilities: [
      "Devises and plans all levels of beekeeping education, beginners to Basic candidates",
      "Plans and organises training to BBKA system learning modules",
      "Asian Hornet Co-ordinator",
    ],
  },
  {
    name: "Eric Cattell",
    role: "Equipment Secretary",
    responsibilities: ["Responsible for all equipment owned by the Club"],
  },
  {
    name: "Roger Newman",
    role: "Exam Secretary",
    responsibilities: [
      "Keeps up to date with rules for BBKA examinations and the system of progressing with beekeeping qualifications",
    ],
  },
];
---

<Layout title="Committee - Dover & District Beekeepers' Association">
  <div class="max-w-6xl mx-auto">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-amber-900 mb-6">
        Our Committee
      </h1>
      <p class="text-xl text-gray-700 leading-relaxed">
        Please find below the names of our Committee and their responsibilities.
        If you would like to contact us, please do so at email: <a
          href="mailto:doveranddistrictbeekeepers@gmail.com"
          class="text-amber-600 font-semibold hover:underline"
          >doveranddistrictbeekeepers@gmail.com</a
        >
      </p>
    </div>

    <!-- Committee Members Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {
        committeeMembers.map((member) => (
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 flex flex-col sm:flex-row gap-6 items-start">
            <div class="flex-shrink-0">
              <Image
                src={placeholderAvatar}
                alt={member.name}
                class="w-24 h-24 rounded-full object-cover border-4 border-amber-50"
              />
            </div>
            <div class="flex-grow">
              <h2 class="text-2xl font-bold text-amber-900 mb-2">
                {member.name}
              </h2>
              <p class="text-lg font-semibold text-gray-700 mb-4">
                {member.role}
              </p>
              {member.responsibilities.length > 0 && (
                <ul class="space-y-2">
                  {member.responsibilities.map((responsibility) => (
                    <li class="text-gray-600 flex items-start">
                      <span class="text-amber-600 mr-2">â€¢</span>
                      <span>{responsibility}</span>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <!-- Contact Section -->
    <div
      class="mt-12 bg-amber-50 p-8 rounded-xl shadow-sm border border-amber-100"
    >
      <h2 class="text-2xl font-bold text-amber-900 mb-4">Get in Touch</h2>
      <p class="text-gray-700 leading-relaxed mb-6">
        If you have any questions or would like to get involved with the
        committee, please don't hesitate to reach out.
      </p>
      <a
        href="/contact"
        class="inline-block px-8 py-3 bg-amber-600 text-white font-semibold rounded-lg shadow-md hover:bg-amber-700 transition-colors text-center"
      >
        Contact Us
      </a>
    </div>
  </div>
</Layout>
