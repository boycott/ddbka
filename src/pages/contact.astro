---
import Layout from "../layouts/Main.astro";
---

<Layout title="Contact Us - Dover & District Beekeepers' Association">
  <div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-amber-900 mb-6">
        Contact Us
      </h1>
      <p class="text-xl text-gray-700 leading-relaxed">
        We'd love to hear from you! Whether you have questions about beekeeping,
        want to join our association, or need to report an Asian Hornet
        sighting, please get in touch.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
        <h2 class="text-2xl font-bold text-amber-900 mb-6">
          Send us a Message
        </h2>
        <form
          action="mailto:doveranddistrictbeekeepers@gmail.com"
          method="post"
          enctype="text/plain"
          class="space-y-6"
        >
          <div>
            <label
              for="name"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Your Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-colors"
              placeholder="John Smith"
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Email Address <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-colors"
              placeholder="john@example.com"
            />
          </div>

          <div>
            <label
              for="subject"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Subject <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-colors"
              placeholder="General Enquiry"
            />
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Message <span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-colors resize-vertical"
              placeholder="Tell us how we can help..."></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-3 bg-amber-600 text-white font-semibold rounded-lg shadow-md hover:bg-amber-700 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Email -->
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
          <h3 class="text-xl font-bold text-amber-900 mb-4">Email</h3>
          <a
            href="mailto:doveranddistrictbeekeepers@gmail.com"
            class="text-amber-600 font-semibold hover:underline break-all"
          >
            doveranddistrictbeekeepers@gmail.com
          </a>
        </div>

        <!-- Meeting Locations -->
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
          <h3 class="text-xl font-bold text-amber-900 mb-4">
            Meeting Locations
          </h3>
          <div class="space-y-4">
            <div>
              <p class="font-semibold text-gray-900">Autumn/Winter</p>
              <p class="text-gray-600">Alkham Village Hall</p>
            </div>
            <div>
              <p class="font-semibold text-gray-900">Spring/Summer</p>
              <p class="text-gray-600">Club Apiary, Eythorne</p>
            </div>
            <p class="text-sm text-gray-500 mt-4">
              Meetings held on the last Saturday of the month (except December)
            </p>
          </div>
        </div>

        <!-- Quick Links -->
        <div
          class="bg-amber-50 p-8 rounded-xl shadow-sm border border-amber-100"
        >
          <h3 class="text-xl font-bold text-amber-900 mb-4">Quick Links</h3>
          <ul class="space-y-3">
            <li>
              <a
                href="/membership"
                class="text-amber-600 font-semibold hover:underline"
              >
                Join Our Association →
              </a>
            </li>
            <li>
              <a
                href="/hornets"
                class="text-amber-600 font-semibold hover:underline"
              >
                Report Asian Hornet →
              </a>
            </li>
            <li>
              <a
                href="/committee"
                class="text-amber-600 font-semibold hover:underline"
              >
                Meet the Committee →
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>
