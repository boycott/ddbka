---
import Layout from "../../layouts/Main.astro";
import { getCollection } from "astro:content";

const allEvents = await getCollection("events");
const now = new Date();
const events = allEvents
  .sort((a, b) => a.data.date.valueOf() - b.data.date.valueOf())
  .filter((m) => m.data.date >= now);
---

<Layout
  title="Meetings - Dover & District Beekeepers' Association"
  description="Join our monthly meetings at Alkham Village Hall or our Club Apiary. Check the schedule for upcoming events."
>
  <div class="max-w-6xl mx-auto">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-amber-600 mb-6">Events</h1>
      <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
        We will be appearing at the following events with people to talk to
        about beekeeping, and to sell members' honey.
      </p>
    </div>

    <!-- Events -->
    {
      events.length > 0 && (
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-amber-600 mb-6">
            Upcoming Events
          </h2>
          <div class="grid gap-6">
            {events.map((event) => (
              <article class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow">
                <div class="flex flex-col md:flex-row gap-6">
                  <div class="flex-shrink-0">
                    <div class="bg-amber-600 text-white rounded-lg p-4 text-center min-w-[100px]">
                      <div class="text-3xl font-bold">
                        {event.data.date.getDate()}
                      </div>
                      <div class="text-sm uppercase">
                        {event.data.date.toLocaleDateString("en-GB", {
                          month: "short",
                        })}
                      </div>
                      <div class="text-sm">{event.data.date.getFullYear()}</div>
                    </div>
                  </div>

                  <div class="flex-1">
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-2">
                      {event.data.title}
                    </h3>

                    <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-300 mb-3">
                      <div class="flex items-center gap-1">
                        <span>ğŸ“</span>
                        <span>{event.data.location}</span>
                      </div>
                      {event.data.time && (
                        <div class="flex items-center gap-1">
                          <span>ğŸ•</span>
                          <span>{event.data.time}</span>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      )
    }
    {
      events.length === 0 && (
        <div class="bg-amber-50 dark:bg-gray-800 p-8 rounded-xl shadow-sm border border-amber-100 dark:border-gray-700 text-center">
          <p class="text-gray-700 dark:text-gray-300 text-lg">
            No events scheduled at the moment. Check back soon.
          </p>
        </div>
      )
    }
  </div>
</Layout>
