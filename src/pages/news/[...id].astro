---
import { getCollection, type CollectionEntry, render } from "astro:content";
import Layout from "../../layouts/Main.astro";

export async function getStaticPaths() {
  const posts = await getCollection("news");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<"news">;
};

const { post } = Astro.props as Props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} - DDBKA News`} type="article">
  <article
    class="max-w-6xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700"
  >
    <header class="mb-8 border-b border-gray-100 dark:border-gray-700 pb-8">
      <div
        class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-4"
      >
        <time datetime={post.data.pubDate.toISOString()}>
          {
            post.data.pubDate.toLocaleDateString("en-GB", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
        <span>â€¢</span>
        <span>{post.data.author}</span>
      </div>

      <h1 class="text-4xl font-bold text-amber-600 mb-4">{post.data.title}</h1>

      {
        post.data.tags.length > 0 && (
          <div class="flex gap-2">
            {post.data.tags.map((tag) => (
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )
      }
    </header>

    <div class="prose prose-amber dark:prose-invert max-w-none">
      <Content />
    </div>

    <footer class="mt-12 pt-8 border-t border-gray-100 dark:border-gray-700">
      <a href="/news" class="text-amber-600 font-semibold hover:underline">
        &larr; All News
      </a>
    </footer>
  </article>
</Layout>
